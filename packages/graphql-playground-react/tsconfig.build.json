{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "outDir": "lib",
        "target": "es2016",
        "module": "commonjs",
        "lib": [
            "es5",
            "es6",
            "dom",
            "es2015.core",
            "es2015.collection",
            "es2015.generator",
            "es2015.iterable",
            "es2015.promise",
            "es2015.proxy",
            "es2015.reflect",
            "es2015.symbol",
            "es2015.symbol.wellknown",
            "esnext.asynciterable",
            "es2016",
            "es2017",
            "es2018"
        ],
        "sourceMap": true,
        "jsx": "preserve",
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "declaration": true,
        "plugins": [{
            "name": "typescript-styled-plugin"
        }],
        "esModuleInterop": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "importHelpers": true,
        "pretty": true,
    },
    "exclude": [
        "node_modules",
        "lib",
        "examples",
        "build"
    ]
}
