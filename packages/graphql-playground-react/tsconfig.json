{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": true,
		"experimentalDecorators": true,
		"removeComments": false,
		"outDir": "dist",
		"target": "es6",
		"jsx": "preserve",
		"module": "commonjs",
		"lib": [
			"es5",
			"es6",
			"dom",
			"es2015.core",
			"es2015.collection",
			"es2015.generator",
			"es2015.iterable",
			"es2015.promise",
			"es2015.proxy",
			"es2015.reflect",
			"es2015.symbol",
			"es2015.symbol.wellknown",
			"esnext.asynciterable",
			"es2016",
			"es2017",
			"es2018"
		],
		"sourceMap": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"importHelpers": true,
		"pretty": true,
		"types": ["node", "jest"],
		"resolveJsonModule": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
